apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ ocp4_workload_amq_console_demo_datagen_application_name }}
  namespace: {{ ocp4_workload_amq_console_demo_datagen_application_namespace }}
  finalizers:
    - resources-finalizer.argocd.argoproj.io/foreground
spec:
  destination:
    name: ""
    namespace: {{ ocp4_workload_amq_console_demo_datagen_namespace }}
    server: 'https://kubernetes.default.svc'
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    retry:
      backoff:
        duration: 5s
        factor: 2
        maxDuration: 3m0s
      limit: 10
    syncOptions:
      - CreateNamespace=true
      - RespectIgnoreDifferences=true
  source:
    repoURL: {{ ocp4_workload_amq_console_demo_datagen_gitops_repo }}
    targetRevision: {{ ocp4_workload_amq_console_demo_datagen_gitops_repo_tag }}
    path: {{ ocp4_workload_amq_console_demo_datagen_gitops_repo_path }}
    helm:
      valuesObject:
        datagen-producer:
          datagen:
            kafka:
              kafka1:
                configs:
                  bootstrap.servers: {{ ocp4_workload_amq_console_demo_amq_streams_1_broker_name }}-kafka-ext-bootstrap-{{ ocp4_workload_amq_console_demo_amq_streams_1_namespace }}.{{ r_openshift_subdomain }}:443
                  security.protocol: {{ ocp4_workload_amq_console_demo_amq_streams_1_security_protocol }}
                  sasl.mechanism: {{ ocp4_workload_amq_console_demo_amq_streams_1_sasl_mechanism }}
                  sasl.jaas.config: 'org.apache.kafka.common.security.scram.ScramLoginModule required username="{{ ocp4_workload_amq_console_demo_amq_streams_1_client_id }}" password="{{ ocp4_workload_amq_console_demo_amq_streams_1_client_secret }}" ;'
              kafka2:
                configs:
                  bootstrap.servers: {{ ocp4_workload_amq_console_demo_amq_streams_2_broker_name }}-kafka-ext-bootstrap-{{ ocp4_workload_amq_console_demo_amq_streams_2_broker_namespace }}.{{ r_openshift_subdomain }}:443
                  security.protocol: {{ ocp4_workload_amq_console_demo_amq_streams_2_security_protocol }}
                  sasl.mechanism: {{ ocp4_workload_amq_console_demo_amq_streams_2_sasl_mechanism }}
                  sasl.jaas.config: 'org.apache.kafka.common.security.oauthbearer.OAuthBearerLoginModule required oauth.client.id="{{ ocp4_workload_amq_console_demo_rhbk_client_amqstreams_name }}" oauth.client.secret="{{ ocp4_workload_amq_console_demo_rhbk_client_amqstreams_secret }}" oauth.token.endpoint.uri="https://{{ ocp4_workload_amq_console_demo_rhbk_host }}.{{ r_openshift_subdomain }}/realms/{{ ocp4_workload_amq_console_demo_rhbk_realm_amqstreams_name }}/protocol/openid-connect/token" ;'
                  sasl.login.callback.handler.class: io.strimzi.kafka.oauth.client.JaasClientOauthLoginCallbackHandler
        datagen-consumer:
          datagen:
            kafka:
              kafka1:
                configs:
                  bootstrap.servers: {{ ocp4_workload_amq_console_demo_amq_streams_1_broker_name }}-kafka-ext-bootstrap-{{ ocp4_workload_amq_console_demo_amq_streams_1_namespace }}.{{ r_openshift_subdomain }}:443
                  security.protocol: {{ ocp4_workload_amq_console_demo_amq_streams_1_security_protocol }}
                  sasl.mechanism: {{ ocp4_workload_amq_console_demo_amq_streams_1_sasl_mechanism }}
                  sasl.jaas.config: 'org.apache.kafka.common.security.scram.ScramLoginModule required username="{{ ocp4_workload_amq_console_demo_amq_streams_1_client_id }}" password="{{ ocp4_workload_amq_console_demo_amq_streams_1_client_secret }}" ;'
              kafka2:
                configs:
                  bootstrap.servers: {{ ocp4_workload_amq_console_demo_amq_streams_2_broker_name }}-kafka-ext-bootstrap-{{ ocp4_workload_amq_console_demo_amq_streams_2_broker_namespace }}.{{ r_openshift_subdomain }}:443
                  security.protocol: {{ ocp4_workload_amq_console_demo_amq_streams_2_security_protocol }}
                  sasl.mechanism: {{ ocp4_workload_amq_console_demo_amq_streams_2_sasl_mechanism }}
                  sasl.jaas.config: 'org.apache.kafka.common.security.oauthbearer.OAuthBearerLoginModule required oauth.client.id="{{ ocp4_workload_amq_console_demo_rhbk_client_amqstreams_name }}" oauth.client.secret="{{ ocp4_workload_amq_console_demo_rhbk_client_amqstreams_secret }}" oauth.token.endpoint.uri="https://{{ ocp4_workload_amq_console_demo_rhbk_host }}.{{ r_openshift_subdomain }}/realms/{{ ocp4_workload_amq_console_demo_rhbk_realm_amqstreams_name }}/protocol/openid-connect/token" ;'
                  sasl.login.callback.handler.class: io.strimzi.kafka.oauth.client.JaasClientOauthLoginCallbackHandler
