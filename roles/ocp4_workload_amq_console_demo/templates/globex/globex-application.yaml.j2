---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ ocp4_workload_amq_console_demo_globex_application_name }}
  namespace: {{ ocp4_workload_amq_console_demo_globex_application_namespace }}
  finalizers:
    - resources-finalizer.argocd.argoproj.io/foreground
spec:
  destination:
    name: ""
    namespace: {{ ocp4_workload_amq_console_demo_globex_namespace }}
    server: 'https://kubernetes.default.svc'
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    retry:
      backoff:
        duration: 5s
        factor: 2
        maxDuration: 3m0s
      limit: 10
    syncOptions:
      - CreateNamespace=true
      - RespectIgnoreDifferences=true
  source:
    repoURL: {{ ocp4_workload_amq_console_demo_globex_gitops_repo }}
    targetRevision: {{ ocp4_workload_amq_console_demo_globex_gitops_repo_tag }}
    path: {{ ocp4_workload_amq_console_demo_globex_gitops_repo_path }}
    helm:
      valuesObject:
        kafka:
          name: &kafkaName {{ ocp4_workload_amq_console_demo_globex_kafka_broker_name }}
          namespace: &namespace {{ ocp4_workload_amq_console_demo_globex_kafka_broker_namespace }}

        kafka-cluster: &kafka
          bootstrapServer: {{ ocp4_workload_amq_console_demo_globex_kafka_broker_name }}-kafka-bootstrap.{{ ocp4_workload_amq_console_demo_globex_kafka_broker_namespace }}.svc.cluster.local:9092
          securityProtocol: {{ ocp4_workload_amq_console_demo_globex_kafka_security_protocol }}
          saslMechanism: {{ ocp4_workload_amq_console_demo_globex_kafka_sasl_mechanism }}
          clientId: {{ ocp4_workload_amq_console_demo_globex_kafka_client_id }}
          clientSecret: {{ ocp4_workload_amq_console_demo_globex_kafka_client_secret }}

        kafka-broker:
          namespace: *namespace
          nameOverride: *kafkaName

        kafka-topics:
          kafka:
            namespace: *namespace
            cluster: *kafkaName

        activity-tracking:
          kafka: *kafka

        recommendation-engine:
          kafka: *kafka

        globex-db:
          pgsql:
            adminPassword: adminpassword
          image:
            tag: 43e87ee

        globex-web:
          sso:
            url: "https://{{ ocp4_workload_amq_console_demo_rhbk_host }}.{{ r_openshift_subdomain }}/realms/{{ ocp4_workload_amq_console_demo_globex_sso_realm }}"
            client: {{ ocp4_workload_amq_console_demo_globex_sso_client }}
            logoutUri: https://globex-web-{{ ocp4_workload_amq_console_demo_globex_namespace }}.{{ r_openshift_subdomain }}/home
            logLevel: "2"

        keycloak-realm-import:
          namespace: {{ ocp4_workload_amq_console_demo_rhbk_namespace }}
          realm:
            name: {{ ocp4_workload_amq_console_demo_globex_sso_realm }}
          client:
            gateway: {{ ocp4_workload_amq_console_demo_globex_sso_client }}
          keycloak:
            name: {{ ocp4_workload_amq_console_demo_rhbk_cr_name }}
          hook:
            maxTimeToWait: 600000